<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="url" format="string" />
    <attr name="control_layout" format="reference" />
    <attr name="bottom" format="boolean" />

    <attr name="control_orientation" format="enum">
        <enum name="horizontal" value="1" />
        <enum name="vertical" value="2" />
    </attr>

    <declare-styleable name="HeaderImageView">
        <attr name="url" />
    </declare-styleable>

    <declare-styleable name="NucleiImageView">
        <attr name="url" />
        <attr name="ratio" format="float" />
        <attr name="radius" format="dimension" />
        <attr name="circle" format="boolean" />
        <attr name="placeholder" format="reference" />
        <attr name="border_color" format="color" />
        <attr name="border_width" format="dimension" />
        <attr name="preload" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PlayerControlsView">
        <attr name="control_layout" />
        <attr name="bottom" />
        <attr name="auto_hide" format="boolean" />
        <attr name="has_next" format="boolean" />
        <attr name="has_previous" format="boolean" />
        <attr name="has_rewind" format="boolean" />
        <attr name="has_fastforward" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ButtonBarView">
        <attr name="control_layout" />
        <attr name="control_orientation" />
        <attr name="bottom" />
        <attr name="buttons_background" format="color" />
        <attr name="selected_color" format="color" />
        <attr name="unselected_color" format="color" />
    </declare-styleable>

</resources>